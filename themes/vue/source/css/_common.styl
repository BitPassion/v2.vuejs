@import "_settings"
@import "_syntax"
@import "_demo"

body
    font-family $body-font
    color $medium
    margin 0

a
    text-decoration none
    color $medium

img
    border none

h1, h2, h3, h4, strong
    font-weight 600
    color $dark

code, pre
    font-family $code-font
    font-size $code-font-size
    background-color #f6f6f6

code
    color $light
    padding 2px 6px
    margin 0 2px
    border 1px solid #e6e6e6
    white-space nowrap

em
    color $light

p
    word-spacing 0.05em

.highlight
    overflow-x auto
    position relative
    padding-top 20px
    table, tr, td
        width 100%
        border-collapse collapse
        padding 0
        margin 0
    pre
        padding 1.2em 1.5em 
        margin 0
    .gutter
        width 1.5em
        pre
            border-top-left-radius $radius
            border-bottom-left-radius $radius
    .code
        pre
            padding-left .5em
            border-top-right-radius $radius
            border-bottom-right-radius $radius
    &.lang-html, &.lang-js, &.lang-bash
        .code:after
            position absolute
            top 0
            right 0
            color #ccc
            background-color #f6f6f6
            text-align center
            font-size .75em
            padding 5px 10px 0
            line-height 15px
            height 15px
            border-top-right-radius $radius
            border-top-left-radius $radius
            font-weight 600
    &.lang-html .code:after
        content 'HTML'
    &.lang-js .code:after
        content 'JS'
    &.lang-bash .code:after
        content 'Shell'

#main
    position relative
    z-index 1
    padding 0 60px 30px