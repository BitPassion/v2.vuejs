@import "_common"

html, body
    height 100%

#nav
    list-style-type none
    text-align center
    margin-bottom 3em
    padding 0
    li
        display inline-block

.nav-link
    color $light
    padding-bottom 3px
    margin 0 1em
    &:hover, &.current
        border-bottom 3px solid $green

#logo
    display block
    margin 0 auto
    width 200px

#hero
    text-align center
    height 100%
    min-height 800px
    position relative
    .inner
        height 640px
        width 100%
        position absolute
        top 50%
        margin-top -360px
        left 0
    h1
        font-size 3em
        margin .5em 0 0
    .sub
        color $light
        font-size 1.2em
    .warning
        color $light
    a.button
        width 180px
    .desc
        max-width 800px
        padding 0 20px
        text-align center
        margin 1.5em auto
        color $light
    .down
        position absolute
        bottom 30px
        width 20px
        left 50%
        margin-left -10px

a.button
    display inline-block
    margin .5em
    font-size 1.25em
    color #fff !important
    font-weight 400 !important
    background-color $green
    padding .5em 1.5em
    border-radius 4px
    text-shadow 0 1px 1px rgba(0,0,0,.2)
    border-bottom 1px solid darken($green, 12%)
    transition background-color .2s ease-out
    &:hover
        background-color lighten($green, 10%)

#social
    text-align center
    list-style-type none
    margin 0
    padding 0
    padding-left 14px
    margin-top 2em
    li
        display inline-block
        margin 0 5px
        iframe
            width 94px !important

.cool
    text-align center
    margin-top 5em
    color $light

#features
    width 800px
    margin 3em auto
    text-align center
    .feat
        box-sizing border-box
        -moz-box-sizing border-box
        display inline-block
        vertical-align top
        width 200px
        margin .5em 2em
        p
            color $light
        a
            color $green
            font-weight 600

#learn-more
    text-align center
    padding-bottom 5em
    a.button
        font-size 1.2em

.icon
    display inline-block
    width 80px
    height 80px
    background url(../images/icons.png)
    background-size 400px 80px
    &.fast
        background-position -80px 0
    &.compact
        background-position -160px 0
    &.powerful
        background-position -240px 0
    &.composable
        background-position -320px 0

#main
    display none

@media screen and (max-width: 420px)
    body
        font-size 14px
    #nav
        margin 2em 0
    #logo
        width 100px
    p.desc
        br
            display none
    .nav-link
        font-size .85em
        margin 0 .5em
    .divider
        font-size 1.2em
        margin 2.5em 1em
    #hero
        min-height 600px
        .inner
            height 600px
            margin-top -300px
        h1
            font-size 2em
        a.button
            font-size 1em
            margin .5em 0
        .sub
            font-size 1em
        .warning, .desc
            font-size .8em
        .down
            display none
    #social
        margin-top 1.5em
    .cool
        margin-top 0

@media screen and (max-width: 860px)
    #features, #hero
        font-size 16px
        width auto