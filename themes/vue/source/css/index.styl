@import "_common"
@import "_header"

$width = 900px
$space = 50px

body
    background-color darken($light, 10%)

#hero
    padding $space 0
    background-color #fff
    .inner
        max-width $width
        margin 0 auto
    .left, .right
        display inline-block
        vertical-align top
    .left
        width 37%
    .right
        width 63%
    .hero-logo
        width 215px
        height 215px
        float right
        margin-right 60px
    h1
        font-weight 300
        margin 0
        font-size 3.2em
    .button
        margin 1em 0
        font-size 1.05em
        font-weight 600
        letter-spacing .1em
        margin-right 1em
    .social-buttons
        list-style-type none
        padding 0
        li
            display inline-block
            vertical-align middle
            margin-right 15px

#highlights
    background-color #fff
    padding-bottom 70px
    .inner
        max-width $width
        margin 0 auto
        text-align center
    .point
        width 33%
        display inline-block
        vertical-align top
        box-sizing border-box
        padding 0 2em
        h2
            color $green
            font-size 1.5em
            font-weight 400
        p
            color $light

#sponsors
    text-align center
    padding 35px 30px 45px
    background-color #f6f6f6
    .inner
        max-width 700px
        margin 0px auto
    h3
        color #999
        font-size .9em
        margin 0 0 10px
    a
        margin 20px 15px 0
        position relative
    a, img
        width 100px
        display inline-block
        vertical-align middle
    img
        transition all .3s ease
        filter contrast(0%)
        &:hover
            filter none
    .become-sponsor
        margin-top 40px
        font-size .9em
        font-weight 700
        width auto
        background-color transparent

#footer
    padding $space 0
    color #fff
    text-align center
    a
        font-weight 700
        color #fff

@media screen and (max-width: $width)
    #header
        display none
    #mobile-bar
        display block
