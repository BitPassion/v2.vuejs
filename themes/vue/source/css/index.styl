@import "_common"

#hero
    margin 5em 0
    text-align center

h1
    font-size 3em

#features
    text-align center
    .feat
        box-sizing border-box
        -moz-box-sizing border-box
        display inline-block
        vertical-align top
        width 20%
        margin 0 4%

#main
    max-width 720px
    margin 5em auto

#features, #main
    a
        color $green
        font-weight 600

@media screen and (max-width: 1200px)
    #features
        .feat
            width 40%

@media screen and (max-width: 600px)
    #features
        .feat
            margin 0
            padding 1em 3em
            width 100%