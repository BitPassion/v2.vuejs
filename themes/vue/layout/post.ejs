<div class="sidebar blog">
    <div class="toggle">···</div>
    <div class="list">
        <h2>Recent Posts</h2>
        <ul>
        <% site.posts.sort('date', -1).limit(10).each(function (post) { %>
            <li>
                <a href="/<%- post.path %>" class="sidebar-link"><%- post.title %></a>
            </li>
        <% }) %>
        <li style="margin:10px 0 3px">
          <script data-gittip-username="yyx990803"
            data-gittip-widget="button"
            src="//gttp.co/v1.js"></script>
        </li>
        </ul>
        <div class="ad">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- vue -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:200px;height:200px"
                 data-ad-client="ca-pub-5859894589064951"
                 data-ad-slot="1367174238"></ins>
            <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>
</div>
<div class="content blog">
    <h1><%- page.title %></h1>
    <h4><%- page.date.format('MMM D[,] YYYY') %></h4>
    <%- page.content %>
</div>