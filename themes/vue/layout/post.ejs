<div class="sidebar blog">
    <div class="toggle">···</div>
    <div class="list">
        <h2>Recent Posts</h2>
        <ul>
        <% site.posts.sort('date', -1).limit(10).each(function (post) { %>
            <li>
                <a href="/<%- post.path %>" class="sidebar-link"><%- post.title %></a>
            </li>
        <% }) %>
        </ul>
    </div>
</div>
<div class="content blog">
    <h1><%- page.title %></h1>
    <h4><%- page.date.format('MMM D[,] YYYY') %></h4>
    <%- page.content %>
</div>